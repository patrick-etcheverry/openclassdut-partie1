    <!-- BLOC DES FEUILLES DE STYLE  -->
    {% block stylesheets %}
      <link rel="stylesheet" href="{{asset('/css/fontello.css')}}">
      <link rel="stylesheet" href="{{asset('/css/bootstrap.min.css')}}">
    {% endblock %}

  </head>
  <body>

    <!-- BLOC DU SLIDER -->
    {% block slider %}
